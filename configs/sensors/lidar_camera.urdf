<?xml version="1.0"?>
<robot name="lidar_camera">
  <!--
    LiDAR + Camera Configuration
    LiDAR 1台 + カメラ 1台の構成
  -->

  <!-- Front Camera -->
  <link name="camera_front">
    <sensor name="CAM_FRONT" type="sensor.camera.rgb">
      <origin xyz="2.0 0.0 1.5" rpy="0 0 0"/>
      <camera>
        <image_size_x>1920</image_size_x>
        <image_size_y>1080</image_size_y>
        <fov>90</fov>
      </camera>
    </sensor>
  </link>

  <!-- Top LiDAR -->
  <link name="lidar_top">
    <sensor name="LIDAR_TOP" type="sensor.lidar.ray_cast">
      <origin xyz="0.0 0.0 2.5" rpy="0 0 0"/>
      <lidar>
        <channels>64</channels>
        <range>100.0</range>
        <points_per_second>1000000</points_per_second>
        <rotation_frequency>10</rotation_frequency>
        <upper_fov>10</upper_fov>
        <lower_fov>-30</lower_fov>
      </lidar>
    </sensor>
  </link>
</robot>
